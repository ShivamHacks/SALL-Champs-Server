// smooth scroll
$('a[href*=#]:not([href=#])').click(function() {
	if (location.pathname.replace(/^\//,'') == this.pathname.replace(/^\//,'') && location.hostname == this.hostname) {
		var target = $(this.hash);
		target = target.length ? target : $('[name=' + this.hash.slice(1) +']');
		if (target.length) {
			$('html,body').animate({
				scrollTop: target.offset().top - 59
			}, 1000);
			return false;
		}
	}
});

var isMobile = {
    Android: function() { return navigator.userAgent.match(/Android/i); },
    BlackBerry: function() { return navigator.userAgent.match(/BlackBerry/i); },
    iOS: function() { return navigator.userAgent.match(/iPhone|iPad|iPod/i); },
    Opera: function() { return navigator.userAgent.match(/Opera Mini/i); },
    Windows: function() { return navigator.userAgent.match(/IEMobile/i) || navigator.userAgent.match(/WPDesktop/i); },
    any: function() { return (isMobile.Android() || isMobile.BlackBerry() || isMobile.iOS() || isMobile.Opera() || isMobile.Windows()); }
};

if (isMobile.any()) {
	$("#thecompetition").css("background-attachment", "scroll");
	$("#contactus").css("background-attachment", "scroll");
}

var repeater = setInterval(scrollCheck, 50);

// for form, fade in left first row, fade in right second row, kind of follow zerif lite format.

var whoweare = $("#whoweare");
var whoWeAreHeading = $("#whoweare-heading");
var whoWeAreContent = $("#whoweare-content");
var whoWeAreLeft = $("#whoweare-left");
var whoWeAreRight = $("#whoweare-right");

var footer = $("#footer");

function scrollCheck() {
	console.log('hi');
	if (isScrolledIntoView(whoweare)) {
		whoWeAreHeading.css("visibility", "visible").addClass('animated fadeInUp').one('webkitAnimationEnd mozAnimationEnd MSAnimationEnd oanimationend animationend', function() {
			whoWeAreContent.css("visibility", "visible").addClass('animated fadeIn');
		});
		whoWeAreLeft.css("visibility", "visible").addClass('animated fadeInLeft');
		whoWeAreRight.css("visibility", "visible").addClass('animated fadeInRight');
	}
	if (isScrolledIntoView(footer)) {
		clearInterval(repeater);
	}
}

// check if element is scrolled into view
function isScrolledIntoView(elem) {
	var $window = $(window);
	var docViewBottom = $window.scrollTop() + $window.height();
	var elemTop = elem.offset().top;
	return (elemTop <= docViewBottom);
}


